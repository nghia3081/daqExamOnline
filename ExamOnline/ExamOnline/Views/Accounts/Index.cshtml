@model ExamOnline.Models.Account
 @{ ViewData["Title"] = "Index"; }
<div class="container">
  <h1 id="LoginMsg" style="text-align: center">Login </h1>
  <p style="color:red;text-align: center;">@ViewBag.message</p>
  <hr />
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 text-align-center">
      <form asp-action="Login">
        <div class="form-group">
          <label asp-for="Email">Email</label>
          <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelpId" placeholder="email" required />
        </div>
        <div class="form-group">
          <label asp-for="Password">Password</label>
          <input type="password" class="form-control" asp-for="Password" placeholder="password" required/>
        </div>
        <button type="submit" class="btn btn-primary" style="margin: 5px auto;text-align: center;display: block;">Login</button>
      </form>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>
